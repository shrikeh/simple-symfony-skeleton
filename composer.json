{
    "name": "shrikeh/base-app",
    "type": "project",
    "authors": [
        {
            "name": "Barney Hanlon",
            "email": "barney@shrikeh.net"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "symfony/console": "^4.3",
        "symfony/framework-bundle": "^4.3",
        "symfony/messenger": "^4.3",
        "symfony/yaml": "^4.3",
        "vlucas/phpdotenv": "^3.6"
    },
    "require-dev": {
        "ext-xdebug": "*",
        "behat/behat": "^3.5@dev",
        "friendsofphp/php-cs-fixer": "^2.16",
        "infection/infection": "^0.14.2",
        "phpmetrics/phpmetrics": "^2.4",
        "phpstan/phpstan": "^0.11.19",
        "phpstan/phpstan-symfony": "^0.11.6",
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/src",
            "Shrikeh\\TestSymfonyApp\\": "application/lib"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Behat\\": "tests/behat/src",
            "Tests\\Unit\\": "tests/unit/src"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "src-dir": "application/src",
        "symfony": {
            "allow-contrib": false
        }
    }
}
