{
  "name": "shrikeh/base-app",
  "type": "project",
  "authors": [
    {
      "name": "Barney Hanlon",
      "email": "barney@shrikeh.net"
    }
  ],
  "require": {
    "php": "^7.4",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "pimple/pimple": "^3.2",
    "psr/simple-cache": "^1.0",
    "shrikeh/teapot": "^2.3",
    "symfony/console": "^4.3",
    "symfony/framework-bundle": "^4.3",
    "symfony/messenger": "^4.3",
    "symfony/yaml": "^4.3"
  },
  "require-dev": {
    "ext-xdebug": "*",
    "behat/behat": "^3.5@dev",
    "codedungeon/phpunit-result-printer": "^0.26.2",
    "friendsofphp/php-cs-fixer": "^2.16",
    "infection/infection": "^0.14.2",
    "php-ds/php-ds": "^1.2",
    "phpmetrics/phpmetrics": "^2.4",
    "phpspec/phpspec": "^6.1",
    "phpstan/phpstan": "^0.11.19",
    "phpstan/phpstan-symfony": "^0.11.6",
    "phpunit/phpunit": "^8.4",
    "squizlabs/php_codesniffer": "^3.5",
    "twig/twig": "^3.0"
  },
  "suggest": {
    "ext-ds":  "*",
    "ext-zend-opcache": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "application/src",
      "Shrikeh\\TestSymfonyApp\\": "application/lib"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Behat\\": "tests/behat/src",
      "Tests\\Mock\\": "tests/mocks",
      "Tests\\Unit\\App\\": "tests/unit/src",
      "Tests\\Spec\\": "tests/spec",
      "Tests\\Utils\\": "tests/utils/src"
    }
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "src-dir": "application/src",
    "symfony": {
      "allow-contrib": false
    }
  }
}
