<?xml version="1.0"?>
<ruleset name="Shrikeh" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="phpcs.xsd">
  <rule ref="PSR12" />
  <file>application</file>
  <file>tests</file>
  <!-- Wherever Symfony stores the precompiled container, we don't care about it -->
  <exclude-pattern>*/cache/*</exclude-pattern>
  <!-- phpspec uses it's very own coding standard -->
  <exclude-pattern>/tests/spec</exclude-pattern>
</ruleset>
